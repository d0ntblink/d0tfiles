# based on Base16 Seti UI
# Author: d0ntblink

# some global theme specific variables
set $gtk-theme Dracula
set $icon-theme Dracula
set $cursor-theme xcursor-breeze
set $gui-font FiraCode Nerd Font 11
set $term-font FiraMono NF 11
set $kvantum-theme Matchama-Dark-Azul

# a theme specific color map
set $base00 #282a36
set $base01 #44475a
set $base02 #bd93f9
set $base03 #6272a4
set $base04 #8be9fd
set $base05 #d6d6d6
set $base06 #ffffff
set $base07 #f8f8f2
set $base08 #ff5555
set $base09 #ffb86c
set $base0A #f1fa8c
set $base0B #50fa7b
set $base0C #69ff94
set $base0D #a4ffff
set $base0E #bd93f9
set $base0F #ff79c6

set $transparent-background-color #bd93f9

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

set $theme_template_script "s/GTK_THEME/$gtk-theme/g; s/ICON_THEME/$icon-theme/g; s/CURSOR_THEME/$cursor-theme/g; s/GUI_FONT/$gui-font/g; s/KVANTUM_THEME/$kvantum-theme/g; s/BACKGROUND_COLOR/$base00/g; s/ACCENT_COLOR/$base0D/g; s/TEXT_COLOR/$base06/g; s/TERM_FONT/$term-font/g;"